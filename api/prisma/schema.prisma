// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId String  @unique
  account   Account @relation(fields: [accountId], references: [id])

  @@index([username], name: "username")
  @@map(name: "users")
}

model Account {
  id      String  @id @default(cuid())
  balance Decimal @default(100) @db.Decimal(10, 2)
  user    User?

  debitedAccount  Transaction[] @relation("DebitedAccount")
  creditedAccount Transaction[] @relation("CreditedAccount")

  @@map(name: "accounts")
}

model Transaction {
  id        String   @id @default(cuid())
  value     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  debitedAccountId  String
  creditedAccountId String
  debitedAccount    Account @relation(fields: [debitedAccountId], references: [id], name: "DebitedAccount")
  creditedAccount   Account @relation(fields: [creditedAccountId], references: [id], name: "CreditedAccount")

  @@map(name: "transactions")
}
