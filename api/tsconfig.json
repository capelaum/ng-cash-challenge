{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "outDir": "dist"
  },
  "paths": {
    "@modules/*": ["modules/*"],
    "@config/*": ["config/*"],
    "@errors/*": ["errors/*"],
    "@utils/*": ["utils/*"]
  },
  "rootDir": "./",
  "baseUrl": "./src",
  "outDir": "./dist",
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "esModuleInterop": true,
  "emitDecoratorMetadata": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true
}
